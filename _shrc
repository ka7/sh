#shopt -s expand_aliases

PATH=/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/snap/bin:~/.sh/bin
SUDO=$([[ $(id -u) -gt 0 ]] && echo 'sudo ')
MHOST=$(hostname -f|tr 'A-Z' 'a-z')
MAILTO=admin@$MHOST
EDITOR=nano

COLOR=31
LABEL=$(id -un)@$MHOST

# Let's try these here, may not be needed
export TERM=linux
export DEBIAN_FRONTEND=readline

# Import managed aliases
[ -f ~/.sh/lib/aliases ] && . ~/.sh/lib/aliases

# Import managed env vars
[ -f ~/.sh/lib/functions ] && . ~/.sh/lib/functions

if [ -f ~/.vhosts/$MHOST ]; then
    # Load primary root profile if exists
    . ~/.vhosts/$MHOST
    [ -f ~/.myrc ] && . ~/.myrc
else
    # Global static shell variables
    ADMIN='sysadm'
    ANAME='System Administrator'
    A_GID='1000'
    A_UID='1000'
    BPATH='/home/backups'
    CIMAP='/etc/dovecot'
    CSMTP='/etc/postfix'
    C_DNS='/etc/powerdns'
    C_SQL='/etc/mysql'
    C_SSL='/etc/ssl'
    C_WEB='/etc/nginx'
    DBMYS='/var/lib/mysql'
    DBSQL='/var/lib/sqlite'
    DHOST='localhost'
    DPORT='3306'
    DTYPE='mysql'
    LROOT='/usr/local/lsws'
    OSMIR='archive.ubuntu.com'
    OSREL='groovy'
    TAREA='Australia'
    TCITY='Sydney'
    VPATH='/home/u'
    V_PHP='7.4'
    WUGID='www-data'

    # Local custom aliases and env var overrides
    [ -f ~/.myrc ] && . ~/.myrc

    sethost $MHOST
fi

PS1="\[\033[1;${COLOR}m\]${LABEL} \w\[\033[0m\] "

export PATH SUDO MAILTO EDITOR TERM DEBIAN_FRONTEND PS1

export ADMIN AHOST AMAIL ANAME APASS A_GID A_UID BPATH CIMAP CSMTP C_DNS
export C_FPM C_SQL C_SSL C_WEB DBMYS DBSQL DHOST DNAME DPASS DPATH DPORT
export DTYPE DUSER EPASS EXMYS EXSQL HNAME HDOMN IP4_0 LROOT MHOST MPATH
export OSMIR OSREL SQCMD SQDNS TAREA TCITY UPASS UPATH UUSER U_GID U_SHL
export U_UID VHOST VPATH VUSER V_PHP WPASS WPATH WPUSR
