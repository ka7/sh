#!/usr/bin/env bash
# .sh/bin/shuser 20160130 - 20200805
# Copyright (C) 1995-2020 Mark Constable <markc@renta.net> (AGPL-3.0)

# TODO: if uid == 1000 then uid = sysadm else uid= u####

[[ $1 =~ '-h' ]] && echo "Usage: shuser [email*]" && exit 1

. ~/.shrc || exit 2 # only needed for SQCMD

PWTBL=vmails

[[ -z $1 ]] && QRY="%" || QRY="$1%"

RESULT=$(echo "
 SELECT count(*)
   FROM $PWTBL
  WHERE user LIKE '$QRY'" | $SQCMD)

if [[ $RESULT -gt 1 ]]; then

    echo "
 SELECT uid, user, home
   FROM $PWTBL
  WHERE user LIKE '$QRY'
  ORDER BY uid" | $SQCMD | \
    awk -F '[|\t]' '{printf "u%d  %-42s %s\n", $1, $2, $3}'

elif [[ $RESULT -eq 1 ]]; then

    EMAIL=$(echo "
 SELECT user
   FROM $PWTBL
  WHERE user LIKE '$QRY' LIMIT 1" | $SQCMD)

    echo "
 SELECT uid, user, home
   FROM $PWTBL
  WHERE user = '$EMAIL'" | $SQCMD | \
    awk -F '[|\t]' '{printf " user: %s\n uuid: u%s\n home: %s\n", $2, $1, $3}'

    echo "   pw: $(shpw $EMAIL)"
else
    echo "No matching users"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
