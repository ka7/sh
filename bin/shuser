#!/usr/bin/env bash
# .sh/bin/shuser 20160130 - 20170506
# Copyright (C) 1995-2017 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 ]] && echo "Usage: shuser uid*|all" && exit 1

PWTBL=vmails
source ~/.sh/lib/functions || exit 2
sethost $1

[[ $1 == all ]] && QRY="%" || QRY="%$1%"

RESULT=$(mysql -BNe "
 SELECT count(*)
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'")

if [[ $RESULT -gt 1 ]]; then
    mysql -BNe "
 SELECT concat('u', uid),
        rpad(user,length(user)+(32-length(user)),' '),
        home
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'
  ORDER BY uid"
elif [[ $RESULT -eq 1 ]]; then
    mysql -Ee "
 SELECT user,
        uid,
        gid,
        quota,
        home
   FROM $ADMIN.$PWTBL
  WHERE user LIKE '$QRY'
  LIMIT 1" | tail -n +2
else
    echo "No matching users"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
