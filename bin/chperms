#!/usr/bin/env bash
# .sh/bin/chperms 20151231 - 20210112
# Copyright (C) 1995-2021 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: chperms vhost|all" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

if [[ $1 == all ]]; then
    source ~/.shrc || exit 3
else
    source ~/.vhosts/$1 || exit 3
fi

[[ ! -d $VPATH ]] && echo "ERROR: $VPATH does not exist" && exit 4

source /root/.sh/lib/_chperms || exit 5

if [[ $1 == all ]]; then
    cd $VPATH
    echo "Changing permissions for:"
    for VHOST in $(/bin/ls -d *); do
        _chperms $VHOST
        echo "$VHOST"
    done
elif [[ $1 =~ \. ]]; then # domainname with a dot
    if [[ -d $VPATH/$1 ]]; then
        _chperms $1
    else
        echo "chperms: $VPATH/$1 does not exist"
    fi
else
    echo "ERROR: Unknown argument $1"
fi

#systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
