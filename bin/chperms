#!/usr/bin/env bash
# .sh/bin/chperms 20151231 - 20221122
# Copyright (C) 1995-2022 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: chperms vhost|all" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

if [[ $1 == all ]]; then
    . ~/.shrc
else
    . ~/.vhosts/$1
fi

[[ ! -d $VPATH ]] && echo "ERROR: $VPATH does not exist" && exit 4

. ~/.sh/lib/_chperms || exit 5

[[ $DEBUG ]] && set -x

if [[ $1 == all ]]; then
    cd $VPATH
    echo "Changing permissions for:"
    for VHOST in $(/bin/ls -d *); do
        _chperms $VHOST
        echo "$VHOST"
    done
elif [[ $1 =~ \. ]]; then # domainname with a dot
    if [[ -d $VPATH/$1 ]]; then
        _chperms $1
    else
        echo "chperms: $VPATH/$1 does not exist"
    fi
else
    echo "ERROR: Unknown argument $1"
fi

[[ $DEBUG ]] && set +x
