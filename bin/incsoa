#!/usr/bin/env bash
# .sh/bin/incsoa 20190607 - 20201017
# Copyright (C) 1995-2020 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: incsoa domain" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

source /root/.vhosts/$(hostname -f)

DID=$(echo "
 SELECT id
   FROM domains
  WHERE name='$1'" | $SQDNS)

SOA=$(echo "
 SELECT content
   FROM records
  WHERE type='SOA'
    AND domain_id='$DID'" | $SQDNS)

SER=$(echo $SOA|awk '{print $3}')
RID=$(echo $SOA|awk '{print $1}')
NOW="$(date +%Y%m%d)00"

(( $SER >= $NOW )) && NEW=$((SER+1)) || NEW=$NOW

REC=$(echo $SOA|awk -v r=${NEW} '{$3=r}1')
UPD=$(date +"%Y-%m-%d %H:%M:%S")

echo "
 UPDATE records SET
        content = '$REC',
        updated = '$UPD'
  WHERE type = 'SOA'
    AND domain_id = $DID" | $SQDNS

echo "
 UPDATE domains SET
        updated = '$UPD'
  WHERE id = $DID" | $SQDNS

echo "
 SELECT content
   FROM records
  WHERE type='SOA'
    AND domain_id='$DID'" | $SQDNS

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
