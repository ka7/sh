#!/usr/bin/env bash
# .sh/bin/setup-tunnel 20181102 - 20181102
# Copyright (C) 1995-2018 Mark Constable <markc@renta.net> (AGPL-3.0)
set -x
[[ -z $1 || $1 =~ '-h' ]] && \
    echo "Usage: setup-tunnel domain [targethost] [user] [port] [sshkeyname]" && exit 1

VHOST=$1
THOST=${2:-$VHOST}
SUSER=${3:-'root'}
SPORT=${4:-'9'}
S_KEY=${5:-'id_rsa'}

if [[ ! -d ~/.ssh ]]; then
    echo ">>> Create local ~/.ssh dir"
    mkdir ~/.ssh
    chmod 700 ~/.ssh
fi

if [[ ! -f ~/.ssh/$S_KEY ]]; then
    echo ">>> Create local ~/.ssh/$S_KEY key"
    ssh-keygen -b 2048 -t rsa -f ~/.ssh/$S_KEY -N '' > /dev/null
    chmod 600 ~/.ssh/$S_KEY*
    echo ">>> Copy public key to $SUSER@$VHOST:.ssh/authorized_keys and chmod 600"
    echo
    cat ~/.ssh/$S_KEY.pub
    echo
fi

grep -q -E "^Host $VHOST\$" ~/.ssh/config
if [[ $? -eq 1 ]]; then
    echo ">>> Create SSH config entry"
    echo "Host $VHOST
  User $SUSER
  Port $SPORT
  Hostname $THOST
  IdentityFile ~/.ssh/$S_KEY
" > ~/.ssh/config.tmp
    cat ~/.ssh/config >> ~/.ssh/config.tmp
    mv ~/.ssh/config.tmp ~/.ssh/config
    chmod 600 ~/.ssh/config
else
    echo "Warning: ~/.ssh/config entry for $1 already exists"
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
