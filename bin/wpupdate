#!/usr/bin/env bash
# .sh/bin/wpupdate 20160817 - 20220401
# Copyright (C) 1995-2022 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: wpupdate domain|all [path]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

[[ ! -d $VPATH ]] && echo "!!! ERROR: '$VPATH' does NOT exist" && exit 3

[[ $DEBUG ]] && set -x

export WP_CLI_CACHE_DIR="/var/tmp"

wpupdate() {
    [[ ! -d $1/wp-admin ]] && echo "ERROR: $_PATH/html is not a Wordpress installation" && exit 4
    _USER=$(stat -c "%U" $1)
    echo
    echo -n "$_USER $1 v"
    su - $_USER -c "
cd $1
wp core version
wp core update
wp theme update-all
wp plugin update-all
"
}

if [[ $1 == all ]]; then
    WPS=$(find $VPATH -depth 4 -type d -name "wp-admin")
    for WP in $WPS; do
        WPDIR=$(dirname $WP)
        if [[ ! -f $WPDIR/DONOTUPDATE ]]; then
            wpupdate $WPDIR
        fi
    done
else
    # Workaround to deal with webroot change to */html
    _PATH=$VPATH/$1/var/www
    [[ -d $_PATH/html ]] && _PATH=$_PATH/html
    [[ -n $2 ]] && _PATH=$_PATH/$2
    wpupdate $_PATH
fi

[[ $DEBUG ]] && set +x
