#!/usr/bin/env bash
# .sh/bin/wpupdate 20160817 - 20180303
# Copyright (C) 2015-2018 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: wpupdate domain|all [path]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

[[ ! -d $VPATH ]] && echo "!!! ERROR: '$VPATH' does NOT exist" && exit 3

export WP_CLI_CACHE_DIR="/var/tmp"

wpupdate() {
    [[ ! -d $1/wp-admin ]] && echo "ERROR: $WPATH is not a Wordpress installation" && exit 4
    UUSER=$(stat -c "%U" $1)
    echo
    echo -n "$UUSER $1 v"
    su - $UUSER -c "
cd $1
wp core version
wp core update
wp theme update-all
wp plugin update-all
"
}

if [[ $1 == all ]];then
    WPS=$(find $VPATH -type d -name "wp-admin")
    for WP in $WPS; do
        wpupdate $(dirname $WP)
    done
else
    WPATH=$VPATH/$1/var/www
    [[ -n $2 ]] && WPATH=$WPATH/$2
    wpupdate $WPATH
fi

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
