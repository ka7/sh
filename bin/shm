#!/usr/bin/env bash
# .sh/bin/shm 20130210 - 20200803
# Copyright (C) 1995-2020 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $REPO ]] && REPO=~/.sh

usage ()
{
    echo "\
cd
$REPO/bin/shm install
shm [install|pull|push|remove|removeall|perms]"
}

sh_perms ()
{
    chmod 700 $REPO $REPO/{bin,etc,lib}
    chmod 700 $REPO/bin/*
    chmod 600 $REPO/{LICENSE.md,README.md,_help,_menu,_myrc,_shrc,etc/*,lib/*}
}

sh_install ()
{
    local F FF DF
    cd
    for F in $(ls -1 $REPO/_*); do
        FF=$(basename $F)
        DF=".${FF#_}"
        if [[ ! -f $HOME/$DF ]]; then
            [[ $DF = ".myrc" ]] && cp $F $DF || ln -s $(basename $REPO)/$FF $DF
        fi
    done
    sh_perms
    [ -f ~/.profile ] && sed -i 's/^mesg/#mesg/' ~/.profile
    touch ~/.hushlogin
    echo "[ -f ~/.shrc ] && . ~/.shrc" >> ~/.bashrc
    echo
    echo ". ~/.shrc"
}

sh_remove ()
{
    local F FF DF
    cd
    sed -i '/\.shrc/d' ~/.bashrc
    for F in $(ls -1 $REPO/_*); do
        FF=$(basename $F)
        DF=".${FF#_}"
        if [[ -L $DF ]]; then
            [[ $DF != ".myrc" ]] && rm -v $DF
        fi
    done
}

sh_remove_all ()
{
    sh_remove
    [[ -f ~/.myrc ]] && cp -v ~/.myrc ~/.myrc.bkp
    cd
    rm -rf $REPO
    echo "
### To reinstall this repo use...
cd
git clone https://github.com/netserva/sh .sh
.sh/bin/shm install
. ~/.shrc
"
}

case "$1" in
    install)   sh_install ;;
    pull)      cd $REPO ; git pull ;;
    push)      cd $REPO ; git commit -a ; git push ;;
    remove)    sh_remove ;;
    removeall) sh_remove_all ;;
    perms)     sh_perms ;;
    *)         usage ;;
esac
