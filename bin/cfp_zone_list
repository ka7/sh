#!/usr/bin/env bash
# .sh/bin/cfp_zone_list 20191209 - 20191209
# Copyright (C) 1995-2019 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: cfp_zone_list domain" && exit 1

curl -s https://api.cloudflare.com/host-gw.html \
  -d "act=zone_list" \
  -d "host_key=$CFP_KEY" \
  -d "zone_name=$1" | jq .
