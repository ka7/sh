#!/usr/bin/env bash
# .sh/bin/addpwtxt 20190114 - 20220330
# Copyright (C) 1995-2022 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ $1 =~ -h ]] && echo "Usage: addpwtxt [password] [vhost]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

[[ $DEBUG ]] && set -x

VPASS=${1:-$(pwgen -sB 16 1)}
VHOST=${2:-$(hostname -f)}

if [[ -f ~/.vhosts/$VHOST ]]; then
    source ~/.vhosts/$VHOST
    PWPIN=$((1000 + RANDOM % 9999))
    NEWPW=$(pwgen -sB 16 1)

    if [[ -d $WPATH/html ]]; then
        echo $VPASS >$WPATH/html/$PWPIN.txt
        chown $UUSER:$WUGID $WPATH/html/$PWPIN.txt
        chmod 640 $WPATH/html/$PWPIN.txt
        echo "$WPATH/html/$PWPIN.txt"
        echo "$VPASS is at https://$VHOST/$PWPIN.txt"
    else
        echo "ERROR: $WPATH/html does not exist"
    fi
else
    echo "ERROR: ~/.vhosts/$VHOST does not exist"
fi

[[ $DEBUG ]] && set +x
