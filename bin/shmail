#!/usr/bin/env bash
# .sh/bin/shmail 20150529 - 20210523
# Copyright (C) 1995-2021 Mark Constable <markc@renta.net> (AGPL-3.0)

#VHOST=${_ARG1#*@} # userid @ $VHOST
#VUSER=${_ARG1%@*} # $VUSER @ domain

[[ $1 =~ '-h' ]] && echo "Usage: shmail [email@|domain]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

_ARG1=${1,,} # lowercase user@domain
VPATH="/home/u"
VHOST='*'
VUSER='*'

if [[ $_ARG1 ]]; then
    if [[ $_ARG1 =~ "@" ]]; then
        VUSER="*${_ARG1%@*}*"
        VHOST="${_ARG1#*@}*"
    else
        VHOST="$_ARG1*"
    fi
fi

HPATH="$VPATH/$VHOST/home"
MPATH="$HPATH/$VUSER"

/bin/ls -d ${MPATH}/Maildir >/dev/null 2>&1
if [[ $? -gt 0 ]]; then
    echo "ERROR: ${MPATH}/Maildir does not exist"
    exit 3
fi

_MBOX=$(/bin/ls -d ${MPATH}/Maildir)
_MNUM=$(echo $_MBOX | wc -w)

if [[ $_MNUM -eq 1 ]]; then
    cd ${MPATH}/Maildir
    find -maxdepth 2 -type d -name "new" -o -name "cur" | sort -f | xargs -0 | (
        while read dir; do
            [[ -z $dir ]] && continue
            N1=0
            N2=0
            N1STR=""
            N2STR=""
            cd "$dir"
            N1=$(du -s | cut -f1)
            N2=$(find -type f | wc -l)
            cd - >/dev/null
            NTOTAL=$(($NTOTAL + $N2))
            if [[ $N1 -lt 5 ]]; then
                N1STR=" "
            elif [[ $N1 -lt 1000000 ]]; then
                N1STR=$(printf "%'3.3fM" $(echo $N1/1000 | bc -l))
            else
                N1STR=$(printf "%'3.3fG" $(echo $N1/1000000 | bc -l))
            fi
            [[ $N2 -eq 0 ]] && N2STR=" " || N2STR=$N2
            printf "%-45s %7s %9s\n" "$(echo $dir | cut -c 3-)" "$N2STR" "$N1STR"
        done
        STOTAL=$(du -s ${MPATH} | cut -f1)
        if [[ $STOTAL -lt 5 ]]; then
            _STOT=" "
        elif [[ $STOTAL -lt 1000000 ]]; then
            _STOT=$(printf "%'3.3fM" $(echo $STOTAL/1000 | bc -l))
        else
            _STOT=$(printf "%'3.3fG" $(echo $STOTAL/1000000 | bc -l))
        fi
        echo "---------------------------------------------------------------"
        printf "%-45s %7s %9s\n" Total $NTOTAL $_STOT
        echo "---------------------------------------------------------------"
    )
    # OSTYP not available here
    if [[ -f /etc/alpine-release ]]; then
        find . -type l
    else
        find -L . -xtype l
    fi
    [ -d ${MPATH}/.spamprobe ] && du -h ${MPATH}/.spamprobe | awk '{printf "%-55s %7s\n", $2, $1}'

else
    du -s ${_MBOX} | sort -n | while read -r _size _path; do
        _fnum=$(find $_path -type f | wc -l)
        [[ $_fnum -eq 0 ]] && continue
        _mail=$(echo $_path | sed 's:/home/u/\(.*\)/home/\(.*\)/Maildir:\2@\1:')
        if [[ $_size -lt 5 ]]; then
            _sstr=" "
        elif [[ $_size -lt 1000000 ]]; then
            _sstr=$(printf "%'3.3fM" $(echo $_size/1000 | bc -l))
        else
            _sstr=$(printf "%'3.3fG" $(echo $_size/1000000 | bc -l))
        fi
        printf "%-45s %7d %9s\n" $_mail $_fnum $_sstr
    done
fi
