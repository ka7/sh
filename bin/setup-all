[[ -z $1 ]] && echo "Usage: setup-all mysql|sqlite" && exit 1

source ~/.sh/lib/functions || exit 2

setup-apps $1
setup-etc $1
#setup-www $1

echo "!!! Installed NetServa HCP"

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
