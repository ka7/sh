#!/usr/bin/env bash
# .sh/bin/setup-all 20170519 - 20171014
# Copyright (C) 1995-2017 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 ]] && echo "Usage: setup-all mysql|sqlite" && exit 1

[[ $(id -u) -gt 0 ]] && export SUDO='sudo ' || export SUDO=

$SUDO setup-deb $1
$SUDO setup-etc $1
$SUDO setup-www $VHOST $1

$SUDO systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
