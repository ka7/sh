#!/usr/bin/env bash
# .sh/bin/setup-all 20170519 - 20201017
# Copyright (C) 1995-2020 Mark Constable <markc@renta.net> (AGPL-3.0)

export PATH=/bin:/usr/bin:/sbin:/usr/sbin:/root/.sh/bin

[[ $1 =~ '-h' ]] && echo "Usage: setup-all [vhost] [dtype] [osrel]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

echo "######## $0 $*"

VHOST=${1:-$(hostname -f|tr 'A-Z' 'a-z')}
DTYPE=${2:-${DTYPE:-'mysql'}}
OSREL=${3:-${OSREL:-'groovy'}}

setup-host $VHOST $DTYPE $OSREL
setup-deb
setup-db
setup-etc
setup-hcp

echo "######## Send message to: $AMAIL"
cat ~/.vhosts/$VHOST.conf | mail -s "Setup $VHOST - $(hostname -i)" -r $AMAIL $AMAIL

systemd-cat -t hlog echo "$(whoami) $(basename $0) $*"
