#!/usr/bin/env bash
# .sh/bin/newmaster 20160816 - 20220401
# Copyright (C) 1995-2022 Mark Constable <markc@renta.net> (AGPL-3.0)

[[ -z $1 || $1 =~ -h ]] && echo "Usage: newmaster domain [passwd] [email] [path]" && exit 1

[[ $(id -u) -gt 0 ]] && echo "ERROR: must be root (use sudo -i)" && exit 2

. /root/.vhosts/$1 || exit 3

[[ ! -d $VPATH ]] && echo "!!! ERROR: setup server first" && exit 4

[[ $DEBUG ]] && set -x

APASS=${2:-$APASS}
EMAIL=${3:-"webmaster@$VHOST"}
_PATH=${4:-''}
WPATH="$VPATH/$VHOST/var/www"
UUSER=$(stat -c "%U" $WPATH)

[[ -d $C_SSL/$VHOST ]] && SCHEME="https://" || SCHEME="http://"

if [[ $_PATH ]]; then
    WPURL=$SCHEME$VHOST/$_PATH
    if [[ -d $WPATH/html/$_PATH ]]; then
        _PATH=$WPATH/html/$_PATH
    else
        _PATH=$WPATH/$_PATH
    fi
else
    WPURL=$SCHEME$VHOST
    if [[ -d $WPATH/html ]]; then
        _PATH=$WPATH/html
    else
        _PATH=$WPATH
    fi
fi

if [ ! -f "$_PATH/wp-config.php" ]; then
    echo "ERROR: This is not a Wordpress folder, run 'addwp vhost' first" && exit 4
fi

if [[ ! -x /usr/local/bin/wp ]]; then
    echo "!!! Install wp-cli as /usr/local/bin/wp"
    curl -s -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
    chmod +x wp-cli.phar
    mv wp-cli.phar /usr/local/bin/wp
fi

su - $UUSER -c "
cd $_PATH
wp user create webmaster $EMAIL \
 --user_pass=$APASS \
 --first_name=Hosting \
 --last_name=Administrator \
 --role=administrator \
 --send-email"

echo
echo "Added $EMAIL / $APASS to $WPURL/wp-admin/"

[[ $DEBUG ]] && set -x
