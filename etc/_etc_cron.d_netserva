MAILTO=_MAILTO

10 0 1 * * root /root/.sh/bin/allssl

0 1 * * *  root /root/.sh/bin/logging all update

11 * * * * root /usr/bin/find /home/u/*/var/tmp -name 'sess_*' -type f -cmin "+240" -delete

10 0 * * * root /usr/bin/doveadm expunge -A mailbox Spam savedbefore 7d

20 0 * * * root /usr/bin/doveadm expunge -A mailbox Trash savedbefore 7d
